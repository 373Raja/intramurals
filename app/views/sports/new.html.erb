<h1>New sport</h1>

<% form_for(@sport) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :teamsize %><br />
    <%= f.text_field :teamsize %>
  </p>
  <p>
    <%= f.label :mmax %><br />
    <%= f.text_field :mmax %>
  </p>
  <p>
    <%= f.label :mmin %><br />
    <%= f.text_field :mmin %>
  </p>
  <p>
    <%= f.label :fmax %><br />
    <%= f.text_field :fmax %>
  </p>
  <p>
    <%= f.label :fmin %><br />
    <%= f.text_field :fmin %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', sports_path %>